<div class="popup-wrapper">
    <div id="popup-container">
        <h5>Contact Us</h5>
        <form id="popup-form">
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" class="form-control">
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control">
            </div>
            <div class="form-group">
                <label for="message">Message</label>
                <textarea id="message-box" class="form-control message-control"></textarea>
            </div>
        </form>
        <div class="modal-footer">
          <p><a herf="javascript:void(0)" onclick="toggle_close('popup-form', 'contact-popup', 'message-box');">Close</a></p> 
          <p><a herf="javascript:void(0)" type="button" >Submit</a></p>
        </div>
    </div>
</div>
